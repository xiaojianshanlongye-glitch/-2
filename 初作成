<body>

    <div id="scoreDisplay">ã‚¿ã‚¤ãƒ ã‚¹ã‚³ã‚¢: 0.00s | ãƒã‚¤ã‚¹ã‚³ã‚¢: 0.00s</div>
    <canvas id="gameCanvas" width="400" height="400"></canvas>
    <div id="messageDisplay">ã‚²ãƒ¼ãƒ ã‚ªãƒ¼ãƒãƒ¼ï¼</div>
    
    <div id="controls">
        <div id="left" class="control-button">â—€ å·¦</div>
        <div id="right" class="control-button">å³ â–¶</div>
    </div>
    
    <div id="adBanner">
        <a href="https://google.com/" target="_blank" style="text-decoration: none; color: #cc0000; font-weight: bold;">
            ã€åºƒå‘Šã‚¹ãƒšãƒ¼ã‚¹ã€‘ã‚ãªãŸã®æ¬¡ã®ä½œå“ã¯ã“ã¡ã‚‰ï¼ ğŸš€
        </a>
    </div>

    <script>
        // ----------------------------------------------------
        // 1. åˆæœŸè¨­å®šã¨å¤‰æ•°
        // ----------------------------------------------------
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreDisplay = document.getElementById('scoreDisplay');
        const messageDisplay = document.getElementById('messageDisplay');
        const adBanner = document.getElementById('adBanner');

        let isGameOver = false;
        let startTime = Date.now();
        let score = 0;
        let highScore = 0;
        let keys = {};
        let gameSpeed = 1.0;
        
        // ã‚²ãƒ¼ãƒ å®šæ•°
        const BASE_GENERATION_INTERVAL = 50; // ãƒ–ãƒ­ãƒƒã‚¯ã®åŸºæœ¬ç”Ÿæˆé–“éš” (50ãƒ•ãƒ¬ãƒ¼ãƒ )
        const MIN_GENERATION_INTERVAL = 10; // æœ€å°ç”Ÿæˆé–“éš” (10ãƒ•ãƒ¬ãƒ¼ãƒ )

        // ãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼è¨­å®š
        let player = {
            x: canvas.width / 2 - 20,
            y: canvas.height - 40,
            width: 40,
            height: 40,
            color: 'white',
            speed: 6
        };

        let obstacles = [];
        let obstacleGenerationTimer = 0;

        // ãƒã‚¤ã‚¹ã‚³ã‚¢ã®åˆæœŸãƒ­ãƒ¼ãƒ‰
        loadHighScore();

        /**
         * ãƒã‚¤ã‚¹ã‚³ã‚¢ã‚’ãƒ–ãƒ©ã‚¦ã‚¶ã®LocalStorageã‹ã‚‰èª­ã¿è¾¼ã‚€
         */
        function loadHighScore() {
            const savedScore = localStorage.getItem('avoidGameHighScore');
            if (savedScore) {
                highScore = parseFloat(savedScore);
            }
        }

        /**
         * ãƒã‚¤ã‚¹ã‚³ã‚¢ã‚’ãƒ–ãƒ©ã‚¦ã‚¶ã®LocalStorageã«ä¿å­˜ã™ã‚‹
         */
        function saveHighScore() {
            localStorage.setItem('avoidGameHighScore', highScore.toFixed(2));
        }

        // ----------------------------------------------------
        // 2. ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼ã¨ãƒªã‚¹ã‚¿ãƒ¼ãƒˆæ©Ÿèƒ½
        // ----------------------------------------------------
        
        // ã‚­ãƒ¼ãƒœãƒ¼ãƒ‰æ“ä½œ
        document.addEventListener('keydown', (e) => { keys[e.key] = true; });
        document.addEventListener('keyup', (e) => { keys[e.key] = false; });

        // ãƒ¢ãƒã‚¤ãƒ«ãƒœã‚¿ãƒ³æ“ä½œ
        const buttons = document.querySelectorAll('.control-button');
        buttons.forEach(button => {
            const direction = button.id;
            const handleStart = (e) => {
                e.preventDefault();
                if (direction === 'left') keys['ArrowLeft'] = true;
                if (direction === 'right') keys['ArrowRight'] = true;
            };
            const handleEnd = (e) => {
                e.preventDefault();
                if (direction === 'left') keys['ArrowLeft'] = false;
                if (direction === 'right') keys['ArrowRight'] = false;
            };
            button.addEventListener('touchstart', handleStart);
            button.addEventListener('mousedown', handleStart);
            button.addEventListener('touchend', handleEnd);
            button.addEventListener('mouseup', handleEnd);
            button.addEventListener('mouseleave', (e) => {
                if (e.buttons === 0) handleEnd(e);
            });
        });

        // ç”»é¢ã‚¯ãƒªãƒƒã‚¯/ã‚¿ãƒƒãƒ—ã§ãƒªã‚¹ã‚¿ãƒ¼ãƒˆ
        canvas.addEventListener('click', restartGame);
        document.getElementById('controls').addEventListener('click', restartGame);

        /**
         * ã‚²ãƒ¼ãƒ ã‚’åˆæœŸçŠ¶æ…‹ã«æˆ»ã—ã¦å†ã‚¹ã‚¿ãƒ¼ãƒˆ
         */
        function restartGame() {
            if (!isGameOver) return;

            isGameOver = false;
            startTime = Date.now();
            gameSpeed = 1.0;
            obstacles = [];
            obstacleGenerationTimer = 0;
            player.x = canvas.width / 2 - player.width / 2;

            messageDisplay.style.visibility = 'hidden';
            adBanner.style.visibility = 'hidden'; // åºƒå‘Šã‚’éè¡¨ç¤º
            
            gameLoop();
        }

        // ----------------------------------------------------
        // 3. ã‚²ãƒ¼ãƒ ãƒ­ã‚¸ãƒƒã‚¯é–¢æ•°
        // ----------------------------------------------------

        /**
         * è¡çªåˆ¤å®š
         */
        function checkCollision(obj1, obj2) {
            return obj1.x < obj2.x + obj2.width &&
                   obj1.x + obj1.width > obj2.x &&
                   obj1.y < obj2.y + obj2.height &&
                   obj1.y + obj1.height > obj2.y;
        }

        /**
         * æ–°ã—ã„éšœå®³ç‰©ã‚’ãƒ©ãƒ³ãƒ€ãƒ ã«ç”Ÿæˆ
         */
        function createObstacle() {
            const blockWidth = Math.random() * 20 + 20;
            const blockHeight = Math.random() * 20 + 20;
            const randomX = Math.random() * (canvas.width - blockWidth);
            
            // ç¸¦æ¨ªã®é€Ÿåº¦ã‚’gameSpeedã«é€£å‹•ã•ã›ã‚‹
            let dx = (Math.random() - 0.5) * 2 * gameSpeed * 0.7; 
            let dy = (Math.random() * 2 + 1) * gameSpeed; 

            obstacles.push({
                x: randomX,
                y: -blockHeight,
                width: blockWidth,
                height: blockHeight,
                color: '#FF0000',
                dx: dx,
                dy: dy
            });
        }

        // ----------------------------------------------------
        // 4. æ›´æ–°å‡¦ç† (ãƒ¡ã‚¤ãƒ³ãƒ­ã‚¸ãƒƒã‚¯)
        // ----------------------------------------------------

        function update() {
            if (isGameOver) return;

            // ã‚¿ã‚¤ãƒ ã‚¹ã‚³ã‚¢ã®æ›´æ–°
            score = (Date.now() - startTime) / 1000;
            scoreDisplay.textContent = `ã‚¿ã‚¤ãƒ ã‚¹ã‚³ã‚¢: ${score.toFixed(2)}s | ãƒã‚¤ã‚¹ã‚³ã‚¢: ${highScore.toFixed(2)}s`;
            
            // é›£æ˜“åº¦ä¸Šæ˜‡ (10ç§’ã”ã¨ã«ã‚¹ãƒ”ãƒ¼ãƒ‰ãŒ0.5ãšã¤ä¸ŠãŒã‚‹)
            gameSpeed = 1.0 + Math.floor(score / 10) * 0.5;

            // ãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼ã®ç§»å‹•
            if (keys['ArrowLeft'] || keys['a']) {
                player.x -= player.speed;
            }
            if (keys['ArrowRight'] || keys['d']) {
                player.x += player.speed;
            }
            player.x = Math.max(0, Math.min(canvas.width - player.width, player.x));


            // éšœå®³ç‰©ã®ç”Ÿæˆé »åº¦ (ã‚¹ãƒ”ãƒ¼ãƒ‰ã«é€£å‹•ã—ã¦å¢—åŠ )
            const currentInterval = Math.max(MIN_GENERATION_INTERVAL, BASE_GENERATION_INTERVAL / gameSpeed);
            
            obstacleGenerationTimer++;
            if (obstacleGenerationTimer >= currentInterval) {
                createObstacle();
                obstacleGenerationTimer = 0;
            }

            // éšœå®³ç‰©ã®ä½ç½®æ›´æ–°ã€è¡çªåˆ¤å®š
            for (let i = obstacles.length - 1; i >= 0; i--) {
                const obs = obstacles[i];
                
                obs.x += obs.dx;
                obs.y += obs.dy;

                // å£ã®è·³ã­è¿”ã‚Š (æ¨ªæ–¹å‘)
                if (obs.x < 0 || obs.x + obs.width > canvas.width) {
                    obs.dx *= -1;
                    obs.x = Math.max(0, Math.min(canvas.width - obs.width, obs.x));
                }
                
                // è¡çªåˆ¤å®š (å½“ãŸã£ãŸã‚‰ã‚²ãƒ¼ãƒ ã‚ªãƒ¼ãƒãƒ¼)
                if (checkCollision(player, obs)) {
                    isGameOver = true;
                    
                    // ãƒã‚¤ã‚¹ã‚³ã‚¢æ›´æ–°ã¨ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸è¡¨ç¤º
                    if (score > highScore) {
                        highScore = score;
                        saveHighScore();
                        messageDisplay.textContent = `NEW RECORD! ${score.toFixed(2)}s\n\nã‚¯ãƒªãƒƒã‚¯ã¾ãŸã¯ã‚¿ãƒƒãƒ—ã§å†æŒ‘æˆ¦`;
                    } else {
                        messageDisplay.textContent = `ã‚²ãƒ¼ãƒ ã‚ªãƒ¼ãƒãƒ¼ï¼ç”Ÿå­˜æ™‚é–“: ${score.toFixed(2)}s\nãƒã‚¤ã‚¹ã‚³ã‚¢: ${highScore.toFixed(2)}s\n\nã‚¯ãƒªãƒƒã‚¯ã¾ãŸã¯ã‚¿ãƒƒãƒ—ã§å†æŒ‘æˆ¦`;
                    }
                    
                    messageDisplay.style.visibility = 'visible';
                    adBanner.style.visibility = 'visible'; // åºƒå‘Šã‚’è¡¨ç¤º
                    return;
                }
                
                // ç”»é¢å¤–ã«å‡ºãŸéšœå®³ç‰©ã®å‰Šé™¤
                if (obs.y > canvas.height) {
                    obstacles.splice(i, 1);
                }
            }
        }

        // ----------------------------------------------------
        // 5. æç”»å‡¦ç†
        // ----------------------------------------------------

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // ãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼ã‚’æç”»
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.width, player.height);

            // éšœå®³ç‰©ã‚’æç”»
            obstacles.forEach(obs => {
                ctx.fillStyle = obs.color;
                ctx.fillRect(obs.x, obs.y, obs.width, obs.height);
            });
        }

        // ----------------------------------------------------
        // 6. ã‚²ãƒ¼ãƒ ãƒ«ãƒ¼ãƒ—
        // ----------------------------------------------------

        function gameLoop() {
            update();
            draw();
            
            if (!isGameOver) {
                requestAnimationFrame(gameLoop);
            }
        }

        // ã‚²ãƒ¼ãƒ é–‹å§‹ï¼
        gameLoop();
    </script>
</body>
