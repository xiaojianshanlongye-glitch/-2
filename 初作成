            font-size: 24px;
            border-radius: 10px;
            user-select: none;
            touch-action: manipulation;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }
        
        .control-button:active {
            background-color: #990000;
            box-shadow: none;
        }

        /* åºƒå‘ŠãƒãƒŠãƒ¼ */
        #adBanner {
