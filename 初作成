            background-color: #f0f0f0;
            font-family: sans-serif;
            /* ã‚¿ãƒƒãƒæ“ä½œæ™‚ã«æ„å›³ã—ãªã„ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚’é˜²ã */
            touch-action: none;
            -webkit-user-select: none;
            user-select: none;
        }
        #gameCanvas {
            border: 2px solid #555;
            background-color: #1a1a1a;
        }
        #scoreDisplay {
            margin-bottom: 10px;
            font-size: 28px;
            font-weight: bold;
